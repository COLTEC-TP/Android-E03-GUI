<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".FormActivity">

    <TextView
        android:id="@+id/form_lbl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/form_title"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/form_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/form_name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/form_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/form_lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/form_email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/form_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/form_lbl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/form_comment"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/form_txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/form_lbl_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/form_note"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/entryNote1"
                android:text="1" />

            <RadioButton
                android:id="@+id/entryNote2"
                android:text="2" />

            <RadioButton
                android:id="@+id/entryNote3"
                android:text="3" />

            <RadioButton
                android:id="@+id/entryNote4"
                android:text="4" />

            <RadioButton
                android:id="@+id/entryNote5"
                android:text="5" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/form_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:text="@string/form_btn_send" />

</LinearLayout>