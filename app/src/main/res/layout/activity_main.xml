<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="br.ufmg.coltec.tp.e03_layout.MainActivity">

    <Button
        android:id="@+id/btn_splash_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_splash_main"
        android:textSize="@dimen/dimens_txt_btn_main"/>

    <Button
        android:id="@+id/btn_noticia_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_noticia_main"
        android:textSize="@dimen/dimens_txt_btn_main"/>

    <Button
        android:id="@+id/btn_previsao_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_previsao_main"
        android:textSize="@dimen/dimens_txt_btn_main"/>

    <Button
        android:id="@+id/btn_formulario_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn_formulario_main"
        android:textSize="@dimen/dimens_txt_btn_main"/>
</LinearLayout>
